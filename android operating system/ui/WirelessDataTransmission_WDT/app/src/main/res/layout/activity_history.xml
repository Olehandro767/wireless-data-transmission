<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <Button
        android:id="@+id/acceptedFileHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_marginBottom="200dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_downward_24"
        android:drawableTint="@color/green_01ac8a"
        android:text="@string/accepted_file_history"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded"
        tools:targetApi="m" />

    <Button
        android:id="@+id/trustedFileHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_marginBottom="200dp"
        android:text="@string/trusted_file_history"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_arrow_upward_24"
        android:drawableTint="@color/green_01ac8a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceptedFileHistoryButton"
        tools:targetApi="m"
        tools:ignore="RtlHardcoded" />
</androidx.constraintlayout.widget.ConstraintLayout>